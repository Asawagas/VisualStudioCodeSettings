{
    "macros": {
        "cursor4Up": [
            "cursorUp",
            "cursorUp",
            "cursorUp",
            "cursorUp"
        ],
        "cursor4Down": [
            "cursorDown",
            "cursorDown",
            "cursorDown",
            "cursorDown"
        ]
    },

    "editor.fontFamily": "MeiryoKe_Console",
    "editor.fontSize": 14,
    "files.autoGuessEncoding":true,
    // 現在行をガターを含めてハイライトするので視認性が上がる
    "editor.renderLineHighlight": "all",
    // Quick Openで開いたファイルはプレビューにしない方が使いやすい
    "workbench.editor.enablePreviewFromQuickOpen": false,
    // ホワイトスペースを表示する。ただし単語間の単一スペースは表示しない
    "editor.renderWhitespace": "boundary",
    // 制御文字を表示する
    "editor.renderControlCharacters": true,
    // codeコマンドで(ディレクトリではなく)ファイルを開いたときは、既に開いているウインドウがあればそこに表示する
    "window.openFilesInNewWindow":"off",
    "window.restoreWindows": "all",
    "editor.minimap.enabled": false,

    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?、。「」（）；：・？＜＞＋－＊／｛｝｜～＆％＄＃”！’　にをはがのともやか",

    "workbench.colorCustomizations": {
        "editorLineNumber.foreground": "#888888"
    },

    "[plaintext]": {
        "editor.quickSuggestions": false,
        "editor.acceptSuggestionOnEnter": "off"
        // "editor.wordBasedSuggestions": false
    },

    "[markdown]": {
        "editor.tabSize": 2
        // "editor.wordWrap": "on",
        // "editor.quickSuggestions": false
    },

    "[python]": {
        "editor.formatOnSave": true,
    },
    "python.linting.lintOnSave": true,
    "files.autoSave": "afterDelay",
    //"python.linting.lintOnTextChange": true,

    "python.linting.pylintArgs": [
        "--disable=W0104"
    ],
    "python.pythonPath": "C:\\Users\\tn26o\\Anaconda3\\envs\\py35",
    
    "window.zoomLevel": 0,

    "local-history.daysLimit": 90,
    "local-history.maxDisplay": 30,
    "local-history.saveDelay": 60,
    "local-history.path": "C:/Users/tn26o/.vscode",
    "jupyter.appendResults": false
}

